@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Entities.Concrete.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Musteri Sayac Sistemi">
    <meta name="keywords" content="Kisi takip, musteri sayac, magaza takip">
    <meta name="author" content="pixelstrap">
    <link rel="icon" href="~/assets/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width" />
    <title>Müşteri Sayaç Sistemi</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
    <!-- Font Awesome-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/fontawesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/feather-icon.css">
    <!-- Plugins css start-->
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/assets/css/responsive.css">
</head>
<body>

    <section>
        <div class="container-fluid">
            <div class="row">

                <div class="col-xl-12 p-0">
                    <div class="login-card">
                        <form class="theme-form login-form" asp-action="index" asp-controller="home" method="post">
                            <h4>Müşteri Sayaç Sistemi</h4>
                            <h6>Lütfen kimlik bilgilerinizi giriniz.</h6>
                            <div class="form-group">
                                <label>Eposta</label><label class="h6 txt-danger"> *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="icon-email"></i></span>
                                    <input class="form-control" asp-for="Mail" type="email" required="" placeholder="Test@gmail.com">

                                </div>
                                <span class="font-danger" asp-validation-for="Mail"></span>
                            </div>
                            <div class="form-group">
                                <label>Şifre</label><label class="h6 txt-danger"> *</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="icon-lock"></i></span>
                                    <input class="form-control" asp-for="Password" type="password" required="" placeholder="*********">

                                </div>
                                <span class="font-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                @*<div class="checkbox">
                                    <a class="link" href="forget-password.html">Şifremi Hatırlat</a>
                                </div>*@
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">GİRİŞ</button>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
